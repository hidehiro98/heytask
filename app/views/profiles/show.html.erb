<div class="row">
  <div class="service-banner">
    <div class="banner-content">
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile_photo, class: 'avatar-show-img' %>
    </div>
    
    <div class="col-md-6">
      <h2><%= @user.first_name %> <%= @user.last_name %></h1>
      <div class="well profile-block profile-description">
        <h3>Description</h3>
        <%= @user.bio %>
      </div>
     
        <div class="well profile-block profile-contact-info">
          <h3>Email Address</h3>
          <%= @user.email %><br/>
        </div>
    </div>
  </div>
</div>



    <% @user.services.each do |service| %>
      <%= link_to service_path(service) do %>
        <div class="col-xs-12 col-md-6">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path service.photo %>');">
            <div class="category">
              <p><%= service.category %></p>
            </div>
            <div class="card-info-data">
              <div class="card-name left">
                <h4><%= service.name %></h4>
              </div>
              <div class="card-details right">
                <p class="card-price">$<%= service.price %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
