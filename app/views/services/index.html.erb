<div class="service-banner">
  <div class="banner-content">
    <% if @category %>
      <h1>List of <%= @category %> services</h1>
    <% else %>
      <h1>List of Services</h1>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">

    <% if @category %>
      <div class="container">
        <% @services.each do |item| %>
          <%= link_to service_path(item) do %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://lorempixel.com/400/200/<%= @photo %>');">
                <div class="category">
                  <p><%= item.category %></p>
                </div>
                <div class="card-info-data">
                  <div class="card-name left">
                    <h4><%= item.name %></h4>
                  </div>
                  <div class="card-details right">
                    <p class="card-price">$<%= item.price %></p>
                  </div>
                  <%= cl_image_tag item.provider.profile_photo, class: 'card-user avatar' %>
                </div>
            </div>
          <% end %>
        <% end %>
      </div>

    <% else %>

      <% @services.each do |service| %>
        <%= link_to service_path(service) do %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://lorempixel.com/400/200/business');">
                <div class="category">
                  <p><%= service.category %></p>
                </div>
                <div class="card-info-data">
                  <div class="card-name left">
                    <h4><%= service.name %></h4>
                  </div>
                  <div class="card-details right">
                    <p class="card-price">$<%= service.price %></p>
                  </div>

                  <%= cl_image_tag service.provider.profile_photo, class: 'card-user avatar' %>
                </div>
            </div>
          </div>
        <% end %>
      <% end %>

    <% end %>
  </div>
</div>

<div id="map" style="width: 100%; height: 600px;"></div>


<% content_for(:after_js) do %>

  <script>
    $(document).ready(function() {

      var infoWindow;
      infoWindow = new google.maps.InfoWindow;

      var handler = Gmaps.build('Google');

      handler.buildMap({ provider: { scrollwheel: false, zoomControl: true }, internal: { id: 'map' } }, function() {

        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        // console.log(markers[0]);

        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();

        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
    });
  });
  </script>
<% end %>
