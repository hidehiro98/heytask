<div class="service-banner">
  <div class="banner-content">
    <% if @category %>
      <h1>List of <%= @category %> services</h1>
    <% else %>
      <h1>List of Services</h1>
    <% end %>
  </div>
</div>


































































<main class="main">

  <div class="main-content">

    <!-- INSERT CARDS HERE -->

