<div class="service-banner">
  <div class="banner-content">
    <h1>List of Services</h1>
  </div>
</div>
<div class="container">
  <div class="row">

    <% if @category %>
      <div class="container">
        <% @services.each do |item| %>
          <%= link_to service_path(item) do %>
            <div class="col-xs-12 col-sm-4">
              <div class="card">
                <div class="card-description">
                  <h2><%= item.name, class: 'bs-link' %></h2>
                  <p><%= item.category %></p>
                </div>
                <%= cl_image_tag item.provider.profile_photo, class: 'card-user avatar' %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

    <% else %>

      <% @services.each do |service| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <div class="card-description">
            <h2><%= link_to service.name, service_path(service), class: 'bs-link' %></h2>
            <p><%= service.category %></p>
          </div>
            <%= cl_image_tag service.provider.profile_photo, class: 'card-user avatar' %>
          </div>
        </div>
      <% end %>

    <% end %>
  </div>
</div>
