<div class="service-banner">
  <div class="banner-content">
    <% if @category %>
      <h1>List of <%= @category %> services</h1>
    <% else %>
      <h1>List of Services</h1>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">

    <% if @category %>
      <div class="container">
        <% @services.each do |item| %>
          <%= link_to service_path(item) do %>
            <div class="col-xs-12 col-sm-4">
              <div class="index-card">
                <div class="index-card-description">
                  <h2 class="bs-link" ><%= item.name %></h2>
                  <p><%= item.category %></p>
                </div>
                <%= cl_image_tag item.provider.profile_photo, class: 'index-card-user avatar' %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

    <% else %>

      <% @services.each do |service| %>
        <%= link_to service_path(service) do %>
          <div class="col-xs-12 col-sm-4">
            <div class="index-card">
              <div class="index-card-description">
              <h2 class="bs-link" ><%= service.name %></h2>
              <p><%= service.category %></p>
            </div>
              <%= cl_image_tag service.provider.profile_photo, class: 'index-card-user avatar' %>
            </div>
          </div>
        <% end %>
      <% end %>

    <% end %>
  </div>
</div>
