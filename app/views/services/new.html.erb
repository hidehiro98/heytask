<div class="service-banner">
  <div class="banner-content">
      <h1>Add a New Service</h1>
  </div>
</div>

<div class="container">
    <div class="row">
        <h1 class="text-center">Create a Service</h1>
        <p class="text-center">Enter the details of the service you want to provide</p>
        <div class="col-md-4 col-md-offset-4">
            <div class="well">
              <%= simple_form_for(@service) do |f| %>
                <%= f.input :name, :label => 'Service Name' %>
                <%= f.input :address, id: "service_address" %>
                <%= f.input :category, collection: @categories.each { |item| item }  %>
                <%= f.input :description %>
                <%= f.input :photo %>
                <%= f.input :photo_cache, as: :hidden %>
                <%= f.input :price %>
                <%= f.submit 'Submit', class: 'btn btn-primary' %>
              <% end %>
            </div>
        </div>
    </div>
</div>