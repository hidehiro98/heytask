<div class="container booking-new" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url('<%= @service.photo.url %>');">
    <div class="row show-margin-vertical">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-center">
        <div style="background-color: white; padding: 20px; margin-top: 70px;">
          <h1 style="margin-top: 0;">Create new booking for <strong><%= @service.name %></strong></h1>
        </div>
      </div>
    </div>
    <div class="row show-margin-vertical">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div style="background-color: white; padding: 20px;">
          <%= simple_form_for [@service, @booking] do |f| %>
            <%= f.input :start_time, as: :string, input_html: { id: 'datetimepicker1' } %>
            <%= f.input :end_time, as: :string, input_html: { id: 'datetimepicker2' } %>
            <%= f.input :title, label: 'Comment', placeholder: 'If you have a comment' %>
            <%= f.submit 'Create booking', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
</div>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(function () {
        $('#datetimepicker1').datetimepicker();
        $('#datetimepicker2').datetimepicker();
    });
  <% end %>
<% end %>


